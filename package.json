{
  "name": "fashion-cloud-cache-api",
  "version": "1.0.0",
  "description": "Fashion Cloud Case Study",
  "main": "main.js",
  "repository": "https://github.com/geezerP/fashion-cloud",
  "author": "Meshack Ngige Mwaura",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf build && tsc -p tsconfig.build.json",
    "format": "prettier --write \"**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register ./index.ts",
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node build/index.js\"",
    "start:prod": "yarn build && node build/index.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "NODE_ENV=testing jest --ci --verbose --forceExit --detectOpenHandles",
    "test:watch": "NODE_ENV=testing jest --watchAll"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.6.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "mongoose": "^5.12.13",
    "morgan": "^1.10.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.12",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^26.0.23",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.12.2",
    "@types/supertest": "^2.0.11",
    "jest": "^27.0.4",
    "prettier": "^2.3.1",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "tsc-watch": "^4.4.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "typescript": "^4.3.2"
  }
}
